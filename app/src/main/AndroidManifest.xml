<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rflix">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".presentation.activities.SettingsActivity"></activity>
        <activity android:name=".presentation.activities.FAQActivity" />
        <activity android:name=".presentation.activities.ContactUsActivity" />
        <activity android:name=".presentation.activities.ProfileActivity" />
        <activity android:name=".presentation.activities.ResetPasswordActivity" />
        <activity android:name=".presentation.activities.LoginActivity" />
        <activity android:name=".presentation.activities.SignupActivity" />
        <activity android:name=".presentation.activities.DetailActivity" />
        <activity android:name=".presentation.activities.SearchActivity" />
        <activity
            android:name=".presentation.activities.ShowAllActivity"
            android:label="" />
        <activity
            android:name=".presentation.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>